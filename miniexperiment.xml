<rspec xmlns:client="http://www.protogeni.net/resources/rspec/ext/client/1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.geni.net/resources/rspec/3" xsi:schemaLocation="http://www.geni.net/resources/rspec/3 http://www.geni.net/resources/rspec/3/request.xsd" type="request">
  <node client_id="user" exclusive="false">
    <sliver_type name="emulab-xen">
      <ns0:xen xmlns:ns0="http://www.protogeni.net/resources/rspec/ext/emulab/1" cores="1" ram="512"/>
    </sliver_type>
    <interface client_id="user:if0">
      <ip address="10.1.0.1" netmask="255.255.255.0" type="ipv4"/>
    </interface>
    <services>
      <execute shell="/bin/sh" command="sudo tc qdisc add dev eth1 root handle 1:0 netem delay 16.194357ms 2.460333ms loss 0.055698%; sudo tc qdisc add dev eth1 parent 1:1 handle 10: tbf rate 729kbit limit 500000000 burst 100000; sudo apt-get -y install iperf; touch ready"/>
    </services>
  </node>
  <node client_id="server" exclusive="false">
    <sliver_type name="emulab-xen">
      <ns1:xen xmlns:ns1="http://www.protogeni.net/resources/rspec/ext/emulab/1" cores="1" ram="512"/>
    </sliver_type>
    <interface client_id="server:if1">
      <ip address="10.1.0.2" netmask="255.255.255.0" type="ipv4"/>
    </interface>
    <services>
      <execute shell="/bin/sh" command="sudo tc qdisc add dev eth1 root handle 1:0 netem delay 16.194357ms 2.614109ms loss 0.055698%; sudo tc qdisc add dev eth1 parent 1:1 handle 10: tbf rate 6490kbit limit 500000000 burst 100000; sudo apt-get -y install iperf; touch ready"/>
    </services>
  </node>
  <link client_id="lan0">
    <interface_ref client_id="user:if0"/>
    <interface_ref client_id="server:if1"/>
    <link_type name="lan"/>
    <property source_id="user:if0" dest_id="lan0" capacity="6490"/>
    <property source_id="server:if1" dest_id="lan0" capacity="6490"/>
  </link>
</rspec>
